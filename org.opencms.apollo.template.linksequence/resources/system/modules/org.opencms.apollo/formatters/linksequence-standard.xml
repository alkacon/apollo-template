<?xml version="1.0" encoding="UTF-8"?>

<NewFormatters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opencms://system/modules/org.opencms.ade.config/schemas/formatters/new_formatter.xsd">
  <NewFormatter language="en">
    <NiceName><![CDATA[%(key.formatter.a-linksequence.default)]]></NiceName>
    <Type><![CDATA[a-linksequence]]></Type>
    <Jsp>
      <link type="WEAK">
        <target><![CDATA[/system/modules/org.opencms.apollo/formatters/linksequence-standard.jsp]]></target>
        <uuid>44771945-3f78-11e6-b24c-0242ac11002b</uuid>
      </link>
    </Jsp>
    <Rank><![CDATA[1000]]></Rank>
    <Match>
      <Types>
        <ContainerType><![CDATA[element]]></ContainerType>
        <ContainerType><![CDATA[linksequence]]></ContainerType>
      </Types>
    </Match>
    <Preview>false</Preview>
    <SearchContent>true</SearchContent>
    <AutoEnabled>true</AutoEnabled>
    <Detail>false</Detail>
    <NestedContainers>false</NestedContainers>
    <Setting>
      <PropertyName><![CDATA[hideTitle]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.hideHeadline)]]></DisplayName>
      <Widget><![CDATA[checkbox]]></Widget>
      <Default><![CDATA[false]]></Default>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[wrapperclass]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.cssclass)]]></DisplayName>
      <Description><![CDATA[%(key.apollo.setting.cssclass.description)]]></Description>
      <Widget><![CDATA[selectcombo]]></Widget>
      <WidgetConfig><![CDATA[%(page-property:apollo.css.wrapper)]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[linksequenceType]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.linksequenceType)]]></DisplayName>
      <Widget><![CDATA[selectcombo]]></Widget>
      <Default><![CDATA[standard]]></Default>
      <WidgetConfig><![CDATA[
        standard:%(key.apollo.setting.linksequenceType.standard)|
        boxed:%(key.apollo.setting.linksequenceType.boxed)|
        navigation:%(key.apollo.setting.linksequenceType.navigation)
      ]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[iconclass]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.iconclass)]]></DisplayName>
      <Description><![CDATA[%(key.apollo.setting.iconclass.description)]]></Description>
      <Widget><![CDATA[selectcombo]]></Widget>
      <Default><![CDATA[caret-right]]></Default>
      <WidgetConfig><![CDATA[%(page-property:apollo.linksequence.icon:
        none:%(key.apollo.setting.iconclass.none)|
        caret-right:%(key.apollo.setting.iconclass.caret)|
        angle-right:%(key.apollo.setting.iconclass.angle)|
        angle-double-right:%(key.apollo.setting.iconclass.angle-double)|
        chevron-right:%(key.apollo.setting.iconclass.chevron)|
        arrow-right:%(key.apollo.setting.iconclass.arrow)|
        hand-o-right:%(key.apollo.setting.iconclass.hand)|
        info:%(key.apollo.setting.iconclass.info)|
        check:%(key.apollo.setting.iconclass.check)|
        globe:%(key.apollo.setting.iconclass.globe)|
        file-text-o:%(key.apollo.setting.iconclass.document)|
        file-pdf-o:%(key.apollo.setting.iconclass.pdf)|
        folder-o:%(key.apollo.setting.iconclass.folder)|
        link:%(key.apollo.setting.iconclass.link)|
        external-link:%(key.apollo.setting.iconclass.external-link)|
        external-link-square:%(key.apollo.setting.iconclass.external-link-square)|
        download:%(key.apollo.setting.iconclass.download)|
        cloud-download:%(key.apollo.setting.iconclass.cloud-download)
        )]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[hstyle]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.header.style.label)]]></DisplayName>
      <Widget><![CDATA[selectcombo]]></Widget>
      <Default><![CDATA[ap-plain]]></Default>
      <WidgetConfig><![CDATA[
        headline:%(key.apollo.setting.header.style.underlined)|
        ap-plain:%(key.apollo.setting.header.style.plain)
      ]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[hsize]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.header.size.label)]]></DisplayName>
      <Widget><![CDATA[select]]></Widget>
      <Default><![CDATA[h3]]></Default>
      <WidgetConfig><![CDATA[
        h1:%(key.apollo.setting.header.size.large)|
        h2:%(key.apollo.setting.header.size.normal)|
        h3:%(key.apollo.setting.header.size.small)|
        h4:%(key.apollo.setting.header.size.verysmall)
      ]]></WidgetConfig>
    </Setting>
  </NewFormatter>
</NewFormatters>
