<?xml version="1.0" encoding="UTF-8"?>

<NewFormatters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opencms://system/modules/org.opencms.ade.config/schemas/formatters/new_formatter.xsd">
  <NewFormatter language="en">
    <NiceName><![CDATA[%(key.formatter.a-job.detail)]]></NiceName>
    <Type><![CDATA[a-job]]></Type>
    <Jsp>
      <link type="WEAK">
        <target><![CDATA[/system/modules/org.opencms.apollo/formatters/job-detail.jsp]]></target>
        <uuid>8bf3bbd9-41f8-11e6-bdf7-0242ac11002b</uuid>
      </link>
    </Jsp>
    <Rank><![CDATA[1000]]></Rank>
    <Match>
      <Types>
        <ContainerType><![CDATA[element]]></ContainerType>
        <ContainerType><![CDATA[job]]></ContainerType>
      </Types>
    </Match>
    <Preview>false</Preview>
    <SearchContent>true</SearchContent>
    <AutoEnabled>true</AutoEnabled>
    <Detail>true</Detail>
    <NestedContainers>false</NestedContainers>
    <Setting>
      <PropertyName><![CDATA[columns]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.job.setting.columns)]]></DisplayName>
      <Widget><![CDATA[checkbox]]></Widget>
      <Default><![CDATA[false]]></Default>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[titlepos]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.job.setting.titlepos)]]></DisplayName>
      <Widget><![CDATA[select]]></Widget>
      <Default><![CDATA[top]]></Default>
      <WidgetConfig><![CDATA[
        top:%(key.apollo.job.setting.titlepos.top)|
        bottom:%(key.apollo.job.setting.titlepos.bottom)
        ]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[buttoncolor]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.buttoncolor)]]></DisplayName>
      <Widget><![CDATA[select]]></Widget>
      <Default><![CDATA[red]]></Default>
      <WidgetConfig><![CDATA[%(page-property:apollo.css.color:
        red:%(key.apollo.setting.color.red)|
        blue:%(key.apollo.setting.color.blue)|
        blue-light:%(key.apollo.setting.color.lightblue)|
        blue-dark:%(key.apollo.setting.color.darkblue)|
        orange:%(key.apollo.setting.color.orange)|
        cyan:%(key.apollo.setting.color.cyan)|
        grey:%(key.apollo.setting.color.grey)
      )]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[btnstyle]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.job.setting.buttonstyle)]]></DisplayName>
      <Widget><![CDATA[select]]></Widget>
      <Default><![CDATA[left]]></Default>
      <WidgetConfig><![CDATA[
        left:%(key.apollo.job.setting.buttonstyle.left)|
        center:%(key.apollo.job.setting.buttonstyle.center)|
        full:%(key.apollo.job.setting.buttonstyle.full)
        ]]></WidgetConfig>
    </Setting>
  </NewFormatter>
</NewFormatters>
