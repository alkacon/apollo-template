<?xml version="1.0" encoding="UTF-8"?>

<NewFormatters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opencms://system/modules/org.opencms.ade.config/schemas/formatters/new_formatter.xsd">
  <NewFormatter language="en">
    <NiceName><![CDATA[Folder navigation]]></NiceName>
    <Type><![CDATA[a-navigation]]></Type>
    <Jsp>
      <link type="WEAK">
        <target><![CDATA[/system/modules/org.opencms.apollo/formatters/navigation-folder.jsp]]></target>
        <uuid>9787d6a4-b0c0-11e6-ade4-0242ac11002b</uuid>
      </link>
    </Jsp>
    <Rank><![CDATA[800]]></Rank>
    <Match>
      <Types>
        <ContainerType><![CDATA[element]]></ContainerType>
        <ContainerType><![CDATA[navigation]]></ContainerType>
      </Types>
    </Match>
    <Preview>false</Preview>
    <SearchContent>false</SearchContent>
    <AutoEnabled>true</AutoEnabled>
    <Detail>false</Detail>
    <NestedContainers>false</NestedContainers>
    <Setting>
      <PropertyName><![CDATA[hideTitle]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.hideHeadline)]]></DisplayName>
      <Widget><![CDATA[checkbox]]></Widget>
      <Default><![CDATA[false]]></Default>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[wrapperclass]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.cssclass)]]></DisplayName>
      <Description><![CDATA[%(key.apollo.setting.cssclass.description)]]></Description>
      <Widget><![CDATA[combo]]></Widget>
      <WidgetConfig><![CDATA[hidden-xs:%(key.apollo.setting.cssclass.hiddenxs)]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[hstyle]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.section.header.style.label)]]></DisplayName>
      <Widget><![CDATA[selectcombo]]></Widget>
      <Default><![CDATA[headline]]></Default>
      <WidgetConfig><![CDATA[
        headline:%(key.apollo.section.header.style.underlined)|
        ap-plain:%(key.apollo.section.header.style.plain)
      ]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[hsize]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.section.header.size.label)]]></DisplayName>
      <Widget><![CDATA[select]]></Widget>
      <Default><![CDATA[h2]]></Default>
      <WidgetConfig><![CDATA[
        h1:%(key.apollo.section.header.size.large)|
        h2:%(key.apollo.section.header.size.normal)|
        h3:%(key.apollo.section.header.size.small)|
        h4:%(key.apollo.section.header.size.verysmall)
      ]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[iconclass]]></PropertyName>
      <DisplayName><![CDATA[%(key.apollo.setting.iconclass)]]></DisplayName>
      <Description><![CDATA[%(key.apollo.setting.iconclass.description)]]></Description>
      <Widget><![CDATA[selectcombo]]></Widget>
      <WidgetConfig><![CDATA[%(page-property:apollo.css.icon:
        info:%(key.apollo.setting.iconclass.info)|
        link:%(key.apollo.setting.iconclass.link)|
        external-link:%(key.apollo.setting.iconclass.linkexternal1)|
        external-link-square:%(key.apollo.setting.iconclass.linkexternal2)|
        download:%(key.apollo.setting.iconclass.download1)|
        cloud-download:%(key.apollo.setting.iconclass.download2)|
        file-text-o:%(key.apollo.setting.iconclass.document)|
        file-pdf-o:%(key.apollo.setting.iconclass.pdf)|
        folder-o:%(key.apollo.setting.iconclass.folder)|
        globe:%(key.apollo.setting.iconclass.globe)|
        arrow-right:%(key.apollo.setting.iconclass.arrow)|
        check:%(key.apollo.setting.iconclass.check)
        )]]></WidgetConfig>
    </Setting>
  </NewFormatter>
</NewFormatters>
